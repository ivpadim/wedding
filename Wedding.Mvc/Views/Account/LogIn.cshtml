@model Wedding.Mvc.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="login-page">
    @using (Html.BeginForm())
    {
        <div class="login">
            <h2 class="h2-margin">
                Login</h2>
            <table>
                <tr>
                    <td>
                        <div class="login-label">
                            @Html.LabelFor(model => model.Account)
                        </div>
                        <div class="login-warning">
                            @Html.ValidationMessageFor(model => model.Account)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(model => model.Account)
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="login-label">
                            @Html.LabelFor(model => model.Password)
                        </div>
                        <div class="login-warning">
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.PasswordFor(model => model.Password)
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="login-warning">
                            @Html.ValidationSummary(true)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="login-label">
                        @Html.CheckBoxFor(model => model.RememberMe)
                        @Html.LabelFor(model => model.RememberMe)
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" class="login-buton" value="enter" />
                        <br />
                        <br />
                        <div class="login-label" style="padding-right:40px;">
                        or try with
                        </div>
                        <br />
                        <div id="fb-root">
                        </div>
                        <script src="http://connect.facebook.net/en_US/all.js"></script>
                        <script>
                            FB.init({
                                appId: '165752523482785', cookie: true,
                                status: true, xfbml: true
                            });                            
                        </script>
                        <fb:login-button perms="email" onlogin="window.location.reload();">Login with Facebook</fb:login-button>
                    </td>
                </tr>
            </table>
        </div>
    }
</div>
