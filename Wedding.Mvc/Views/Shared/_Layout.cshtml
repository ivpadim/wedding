<!DOCTYPE html>
<html>
<head>
    <title>Martha & Ivan Wedding - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Layout.css")" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="@Url.Content("~/Content/Images/icon.gif")"/>
    <script src="@Url.Content("~/Content/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.tmpl.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.easing.1.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.anythingslider.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/knockout-1.1.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/knockout.mapping-latest.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/cufon-yui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/cufon-replace.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/swiss.font.js")" type="text/javascript"></script>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-22728064-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
</head>
<body>
    <table class="main">
        <tr>
            <td colspan="2" class="welcome">
                @Html.Partial("_LogOut")
            </td>
        </tr>
        <tr>
            <td>
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Content/Images/logo.png")" alt=""/>
                    </a>
                </div>
            </td>
            <td>
                <div class="menu">
                    <ul class="left">
                        <li class="@Html.Partial("_OnActiveLink", "Home")">@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li class="@Html.Partial("_OnActiveLink", "About us")">@Html.ActionLink("Nosotros", "About", "Home")</li>
                        <li class="@Html.Partial("_OnActiveLink", "Wedding")">@Html.ActionLink("Boda", "Index", "Wedding")</li>
                        <li class="@Html.Partial("_OnActiveLink", "Your wishes")">@Html.ActionLink("Tus Deseos", "YourWishes", "Wedding")</li>
                    </ul>
                    <ul class="right">
                        <li class="@Html.Partial("_OnActiveLink", "Photos")">@Html.ActionLink("Fotos", "PhotoAlbum", "Wedding")</li>
                        <li class="@Html.Partial("_OnActiveLink", "Music")">@Html.ActionLink("Música", "Music", "Wedding")</li>
                        <li class="@Html.Partial("_OnActiveLink", "Noticias")">@Html.ActionLink("Noticias", "Index", "News")</li>
                        <li class="@Html.Partial("_OnActiveLink", "Contact")">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    </ul>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2" class="content">
                @RenderBody()
            </td>
        </tr>
        <tr>
            <td colspan="2" class="footer">
                Martha & Ivan Wedding © 2011
            </td>
        </tr>
    </table>
</body>
</html>
